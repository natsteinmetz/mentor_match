<h2>New Mentor</h2>
<%= form_for(@mentor) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :affiliation %><br />
    <%= f.text_field :affiliation %>
  </p>

  <%= f.submit %>
<% end %>

